@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<header class="hero-section text-center py-5 text-white">
    <div class="container">
        <h1 class="display-4 font-weight-bold mb-3">Welcome to CarRentalManagement System</h1>
        <p class="lead">Your gateway to hassle-free car rentals. Book today!</p>
        <a href="@Url.Action("Login", "Admin")" class="btn btn-primary btn-lg mt-3">Get Started</a>
    </div>
</header>

<!-- About Us and Features Section -->
<section class="about-features py-5">
    <div class="container">
        <div class="row">
            <!-- About Us Column -->
            <div class="col-md-6 mb-4">
                <h2 class="h3 font-weight-bold">About Us</h2>
                <p>CarRentalManagement provides a seamless experience for users to browse, rent, and manage their car rentals with ease. Explore our services and take advantage of our powerful tools.</p>
            </div>
            <!-- Features Column -->
            <div class="col-md-6 mb-4">
                <h2 class="h3 font-weight-bold">Features</h2>
                <ul class="list-unstyled">
                    <li class="mb-3"><i class="fas fa-car mr-2 text-primary"></i> Wide range of cars to choose from</li>
                    <li class="mb-3"><i class="fas fa-laptop-house mr-2 text-primary"></i> Easy online booking system</li>
                    <li class="mb-3"><i class="fas fa-headset mr-2 text-primary"></i> 24/7 customer support</li>
                    <li class="mb-3"><i class="fas fa-lock mr-2 text-primary"></i> Secure and reliable service</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap and FontAwesome CDN for Icons -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<!-- Optional Custom Styles -->
<style>
    .hero-section {
        background: url('images/hero-background.jpg') no-repeat center center;
        background-size: cover;
        padding: 4rem 1rem;
        opacity: 0.9;
    }

    .hero-section h1 {
        font-size: 2.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .about-features {
        background-color: #f9f9f9;
    }

    .list-unstyled li {
        font-size: 1rem;
        display: flex;
        align-items: center;
    }

    .list-unstyled i {
        font-size: 1.5rem;
    }
</style>
