@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <p class="lead" style="font-size: 1rem;">Use this page to detail your site's privacy policy. Be transparent about how you handle user data, ensure compliance with privacy regulations, and inform users about their rights.</p>
            <p class="small">Make sure to update this page regularly to reflect any changes in your practices and to comply with the latest legal requirements.</p>
        </div>
    </div>
</div>

<!-- Bootstrap CDN (ensure Bootstrap is included in the project) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
