@model CarRentalManagement.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Customer Details</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>First Name</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>@Model.Address</td>
            </tr>
        </tbody>
    </table>

    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Back to List</a>
</div>

<!-- Bootstrap CDN (ensure Bootstrap is included in the project) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
