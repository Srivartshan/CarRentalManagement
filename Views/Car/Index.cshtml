@model IEnumerable<CarRentalManagement.Models.Car>

@{
    ViewData["Title"] = "Car List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-end">
        <a href="@Url.Action("Login", "Admin")" class="btn btn-danger">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
    <h1 class="display-4 text-center mb-4">Car List</h1>

    <div class="mb-3">
        <a href="@Url.Action("Add", "Car")" class="btn btn-success btn-lg">Add New Car</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Model</th>
                <th>Make</th>
                <th>Year</th>
                <th>Daily Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Model</td>
                    <td>@car.Make</td>
                    <td>@car.Year</td>
                    <td>@car.DailyRate.ToString("C")</td>
                    <td>
                <a href="@Url.Action("Details", "Car", new { id = car.Id })" class="btn btn-info btn-sm">Details</a>
                <a href="@Url.Action("Edit", "Car", new { id = car.Id })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Car", new { id = car.Id })" class="btn btn-danger btn-sm" 
                   onclick="return confirm('Are you sure you want to delete this car?');">Delete</a>
            </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap CDN (ensure Bootstrap is included in the project) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
