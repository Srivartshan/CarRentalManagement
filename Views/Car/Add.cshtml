@model CarRentalManagement.Models.Car

@{
    ViewData["Title"] = "Add Car";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Add New Car</h1>

    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Make"></label>
            <input asp-for="Make" class="form-control" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DailyRate"></label>
            <input asp-for="DailyRate" class="form-control" />
            <span asp-validation-for="DailyRate" class="text-danger"></span>
        </div>
        <div class="form-group">
        <label asp-for="SeatingCapacity"></label>
        <input asp-for="SeatingCapacity" class="form-control" />
        <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="FuelType"></label>
    <input asp-for="FuelType" class="form-control" />
    <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Add Car</button>
    </form>
</div>

<!-- Add jQuery and Validation Scripts -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
