@model CarRentalManagement.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Booking Details</h1>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Car</th>
            <td>@Model.Car.Model</td>
        </tr>
        <tr>
            <th>Customer</th>
            <td>@Model.Customer.FirstName</td>
        </tr>
        <tr>
            <th>Booking Date</th>
            <td>@Model.BookingDate.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Return Date</th>
            <td>@Model.ReturnDate.ToShortDateString()</td>
        </tr>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Index", "Booking")" class="btn btn-primary btn-lg">Back to List</a>
    </div>
</div>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
